<Rect>:
    canvas:
        Color:
            rgb: self.color
        Rectangle:
            pos: self.pos
            size: self.size

<Ground>:
    canvas:
        Color:
            rgb: self.color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: self.line_color
        Line:
            points: self.x, self.height, self.width, self.height
            width: self.line_width

<Man,UFO>
    canvas.before:
        PushMatrix
        Translate:
            xy: self.center_x, self.center_y
        Rotate: 
            angle:self.angle
            axis: 0, 0, 1
        Translate:
            xy: -self.center_x, -self.center_y
    canvas.after:
        PopMatrix

<Ray>
    center_x: self.ufo.center_x
    top: self.ufo.center_y
